{
    "compilerOptions": {
      "target": "ES2020",                        // Specify ECMAScript target version
      "module": "CommonJS",                     // Node.js uses CommonJS
      "rootDir": "./src",                       // Source files
      "outDir": "./dist",                       // Output folder
      "strict": true,                           // Enable strict type-checking options
      "esModuleInterop": true,                  // Interoperability for ES6 modules
      "resolveJsonModule": true,                // Allow importing JSON files
      "skipLibCheck": true                      // Skip type checks on libraries
    },
    "include": ["src/**/*.ts"],                 // Files to include in compilation
    "exclude": ["node_modules", "dist"]         // Exclude folders
  }
  